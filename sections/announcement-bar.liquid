<div
    class="announcement-bar"
    style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }}; padding: 10px; text-align: center;"
>
    {{ section.settings.announcement_text }}
</div>

{% schema %}
{
    "name": "Announcement Bar",
    "settings": [
        {
            "type": "color",
            "id": "background_color",
            "label": "Background color",
            "default": "#f4f4f4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#222222"
        },
        {
            "type": "text",
            "id": "announcement_text",
            "label": "Announcement text",
            "default": "Welcome to our store!"
        }
    ],
    "presets": [
        {
            "name": "Announcement Bar",
            "category": "Header",
        }
    ]
}
{% endschema %}